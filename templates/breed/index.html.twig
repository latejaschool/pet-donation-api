{% extends 'base.html.twig' %}

{% block body %}

<h1>Listar Raças</h1>

<div class="card card-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for breed in breeds %}
                <tr>
                    <td>{{ breed.name }}</td>
                    <td>{{ breed.description }}</td>
                    <td>
                        <button class="btn btn-outline-warning">Editar</button>
                        <button onclick="confirmRemove('{{ breed.id }}')" class="btn btn-outline-danger">Excluir</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

{% block javascripts %}
    <script>
        function confirmRemove(id) {
            let path = '{{ path("admin_breed_remove", {id: "breed_id"}) }}';

            if (confirm("Voce tem certeza?")) {
                location.href = path.replace("breed_id", id);
            }
        }
    </script>
{% endblock %}